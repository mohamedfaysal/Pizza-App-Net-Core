@page
@model pizza_zoe.Pages.Admin.IndexModel
@{
}


<h1>Vous devez vous authentifier</h1>
@if (Model.DisplayInvalidAccountMessage)
{
    <br />

    <div class="alert alert-danger" role="alert">
        ERREUR : Ce compte est invalide
    </div>

}

<br />


<form class="form-row w-25" method="post">
    <input class="form-control mb-4" type="text" name="username" placeholder="Login"> <br /> <br />
    <input class="form-control mb-4" type="password" name="password" placeholder="Mot de passe"> <br /> <br />
    <button class="btn btn-primary">Se connecter</button>
</form>


